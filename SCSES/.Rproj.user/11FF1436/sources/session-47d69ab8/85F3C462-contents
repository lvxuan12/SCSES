#' @title Merge splicing events
#' @description Merge different types of splicing events
#' in work_path/splicing_value, and save merged splicing value to work_path/rds
#' @param paras list fromJSON(paras_file)

#' @return Merged splicing value path
#'
#' @export
#'
mergeSplicingValue <- function(paras){
  psi_path <- paste0(paras$Basic$work_path, "/splicing_value/")
  rc_path <- paste0(paras$Basic$work_path, "/splicing_value/")
  event_path <- paste0(paras$Basic$work_path, "/splicing_value/")
  output_path <- paste0(paras$Basic$work_path, "/rds/")
  if (!dir.exists(output_path)) {
    dir.create(output_path)
  }
  psi_rdata <- list.files(psi_path, pattern = "_psi.rdata", full.names = T)
  psi_all <- data.frame()
  for (f in psi_rdata)
  {
    psi <- get(load(f))
    psi_all <- rbind(psi_all, psi)
  }
  psi_all[is.na(psi_all)] <- 0
  saveRDS(psi_all, paste0(output_path, "/psi.rds"))
  rc_rdata <- list.files(rc_path, pattern = "_rc.rdata", full.names = T)
  rc_all <- data.frame()
  for (f in rc_rdata)
  {
    name <- load(f)
    name <- name[grep("^rc", name)]
    for (x in name) {
      tmp <- eval(parse(text = x))
      tmp <- tmp[!duplicated(rownames(tmp)), , drop = F]
      tmp <- tmp[which(!row.names(tmp) %in% row.names(rc_all)), , drop = F]
      rc_all <- rbind(rc_all, tmp)
    }
  }
  rc_all[is.na(rc_all)] <- 0
  saveRDS(rc_all, paste0(output_path, "/rc.rds"))
  event_rdata <- list.files(event_path, pattern = "_rc.rdata", full.names = T)
  event_all <- data.frame()
  for (f in event_rdata)
  {
    load(f)
    type <- gsub("_rc.rdata", "", unlist(strsplit(f, "/"))[length(unlist(strsplit(f, "/")))])
    events$type <- type
    event_all <- rbind(event_all, events)
  }
  saveRDS(event_all, paste0(output_path, "/event.rds"))
  return(output_path)
}


#' @title Merge PSI
#' @description Merge PSI for different types of splicing events
#' in work_path/splicing_value, and save merged PSI to work_path/rds
#' @param paras list fromJSON(paras_file)

#' @return Merged PSI path
#'
#' @export
#'

mgergePSI <- function(paras) {
  psi_path <- paste0(paras$Basic$work_path, "/splicing_value/")
  output_path <- paste0(paras$Basic$work_path, "/rds/")
  if (!dir.exists(output_path)) {
    dir.create(output_path)
  }
  psi_rdata <- list.files(psi_path, pattern = "_psi.rdata", full.names = T)
  psi_all <- data.frame()
  for (f in psi_rdata)
  {
    psi <- get(load(f))
    psi_all <- rbind(psi_all, psi)
  }
  psi_all[is.na(psi_all)] <- 0
  saveRDS(psi_all, paste0(output_path, "/psi.rds"))
  return(output_path)
}

#' @title Merge Read counts
#' @description Merge Read counts for different types of splicing events
#' in work_path/splicing_value, and save merged Read counts to work_path/rds
#' @param paras list fromJSON(paras_file)

#' @return Merged Read counts path
#'
#' @export
#'

mgergeRC <- function(paras) {
  rc_path <- paste0(paras$Basic$work_path, "/splicing_value/")
  output_path <- paste0(paras$Basic$work_path, "/rds/")
  if (!dir.exists(output_path)) {
    dir.create(output_path)
  }
  rc_rdata <- list.files(rc_path, pattern = "_rc.rdata", full.names = T)
  rc_all <- data.frame()
  for (f in rc_rdata)
  {
    name <- load(f)
    name <- name[grep("^rc", name)]
    for (x in name) {
      tmp <- eval(parse(text = x))
      tmp <- tmp[!duplicated(rownames(tmp)), , drop = F]
      tmp <- tmp[which(!row.names(tmp) %in% row.names(rc_all)), , drop = F]
      rc_all <- rbind(rc_all, tmp)
    }
  }
  rc_all[is.na(rc_all)] <- 0
  saveRDS(rc_all, paste0(output_path, "/rc.rds"))
  return(output_path)
}


#' @title Merge event information
#' @description Mergeevent information for different types of splicing events in
#' work_path/splicing_value, and save merged event information to work_path/rds
#' @param paras list fromJSON(paras_file)

#' @return Merged event information path
#'
#' @export
#'

mgergeEvent <- function(paras) {
  event_path <- paste0(paras$Basic$work_path, "/splicing_value/")
  output_path <- paste0(paras$Basic$work_path, "/rds/")
  if (!dir.exists(output_path)) {
    dir.create(output_path)
  }
  rc_rdata <- list.files(event_path, pattern = "_rc.rdata", full.names = T)
  event_all <- data.frame()
  for (f in rc_rdata)
  {
    load(f)
    type <- gsub("_rc.rdata", "", unlist(strsplit(f, "/"))[length(unlist(strsplit(f, "/")))])
    events$type <- type
    event_all <- rbind(event_all, events)
  }
  saveRDS(event_all, paste0(output_path, "/event.rds"))
  return(output_path)
}
